#Imagem 1
from tkinter import *
from PIL import Image, ImageTk   

# Janela principal
janela = Tk()
janela.title("Logo da Ufopa")

imagem = Image.open('ufopa.png')
imagem = imagem.resize((500, 500))  
img_tk = ImageTk.PhotoImage(imagem)

label_imagem = Label(janela, image=img_tk)
label_imagem.pack(pady=10)

nome_imagem = "Logo Ufopa"
label_nome = Label(janela, text=nome_imagem, font=("Arial", 36))
label_nome.pack(pady=5)

janela.mainloop()

#Imagem 2
from tkinter import *
from PIL import Image, ImageTk

class GIFAnimado(Label):
    def __init__(self, master, arquivo_gif):
        super().__init__(master)

        self.frames = []
        self.indice = 0

        # Carregar todos os frames do GIF
        gif = Image.open(arquivo_gif)
        try:
            while True:
                frame = gif.copy()
                self.frames.append(ImageTk.PhotoImage(frame))
                gif.seek(len(self.frames))  # vai para o próximo frame
        except EOFError:
            pass

        # Exibir primeiro frame
        self.config(image=self.frames[0])
        self.animar()

    def animar(self):
        # Atualiza para o próximo frame
        self.indice = (self.indice + 1) % len(self.frames)
        self.config(image=self.frames[self.indice])
        self.after(80, self.animar)  # tempo entre frames (em ms)


# JANELA PRINCIPAL
janela = Tk()
janela.title("Planificação Icosaedro")

gif = GIFAnimado(janela, "Planificação Icosaedro.gif")
gif.pack(pady=10)

label_nome = Label(janela, text="Planificação Icosaedro", font=("Arial", 36))
label_nome.pack()

janela.mainloop()

#Imagem 3
from tkinter import *
from PIL import Image, ImageTk

class GIFAnimado(Label):
    def __init__(self, master, arquivo_gif):
        super().__init__(master)

        self.frames = []
        self.indice = 0

        # Carregar todos os frames do GIF
        gif = Image.open(arquivo_gif)
        try:
            while True:
                frame = gif.copy()
                self.frames.append(ImageTk.PhotoImage(frame))
                gif.seek(len(self.frames))  
        except EOFError:
            pass

        # Exibir primeiro frame
        self.config(image=self.frames[0])
        self.animar()

    def animar(self):
        # Atualiza para o próximo frame
        self.indice = (self.indice + 1) % len(self.frames)
        self.config(image=self.frames[self.indice])
        self.after(80, self.animar)  


# JANELA PRINCIPAL
janela = Tk()
janela.title("Planificação Octaedro")

gif = GIFAnimado(janela, "Octaedro.gif")
gif.pack(pady=10)

label_nome = Label(janela, text="Planificação Octaedro", font=("Arial", 36))
label_nome.pack()

janela.mainloop()

